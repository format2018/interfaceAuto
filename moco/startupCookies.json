[
  {
    "description": "一个带有cookies的get请求-相当于登录后的操作",
    "request": {
      "uri": "/getWithCookies",
      "method": "get",
      "cookies": {
        "login": "true",
        "password": "123"
      }
    },
    "response": {
      "headers": {"Content-Type": "text/html;charset=gbk"},
      "text": "一个带有cookies信息的get请求~"
    }
  },

  {
    "description": "一个带有cookies的post请求",
    "request": {
      "uri": "/postWithCookies",
      "method": "post",
      "cookies": {
        "login": "true"
      },
      "json": {
        "name": "lss",
        "age": "19"
      }
    },
    "response": {
      "headers": {"Content-Type": "text/html;charset=gbk"},
      "status": 200,
      "json": {
        "lss": "success",
        "status": "1"
      }
    }
  },

  {
    "description": "一个返回cookie信息的get请求-相当于登录",
    "request": {
      "uri": "/getCookies",
      "method": "get"
    },
    "response": {
      "headers": {"Content-Type": "text/html;charset=gbk"},
      "cookies": {
        "login": "true",
        "password": "123"
      },
      "text": "mock一个get请求 获取cookies信息"
    }
  }

]

// 用jmeter验证带有cookie信息的get请求或post请求
// json中不能有注释代码,不然编译moco执行失败